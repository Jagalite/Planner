<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:padding="10dp">

    <TextView
            android:id="@+id/cashflowRecyclerTextRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    <Button
            android:text="Button"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" android:onClick="add"
            app:layout_constraintStart_toEndOf="@+id/inputAmount" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

</LinearLayout>