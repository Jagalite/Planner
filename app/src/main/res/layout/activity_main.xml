<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Button"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" android:onClick="add"
            app:layout_constraintStart_toEndOf="@+id/inputAmount" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="115dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/inputFrequency" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/inputAmount"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inputFrequency" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/cashFlowTotal" android:layout_marginTop="41dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="552dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/cashflowRecyclerView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cashFlowTotal"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button2"/>
</android.support.constraint.ConstraintLayout>