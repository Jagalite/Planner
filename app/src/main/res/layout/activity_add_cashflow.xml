<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Button"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" android:onClick="add"
            app:layout_constraintStart_toEndOf="@+id/inputAmount3" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/inputAmount3"
            tools:layout_editor_absoluteY="654dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/inputFrequency2"/>
    <Spinner
            android:layout_width="115dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/inputFrequency2" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"/>
</android.support.constraint.ConstraintLayout>